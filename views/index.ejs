<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Country Capitals API</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: #f8fafc;
      }
      .container {
        max-width: 700px;
        margin-top: 40px;
      }
      .card {
        margin-bottom: 20px;
      }
      .capital-list {
        max-height: 300px;
        overflow-y: auto;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="mb-0">Country Capitals</h1>
          <p class="mb-0 text-muted">
            Selamat datang, <strong><%= user.username %></strong>!
          </p>
        </div>
        <button class="btn btn-outline-danger" id="logoutButton">Logout</button>
      </div>

      <!-- Alert (no longer used, kept for layout compatibility) -->
      <div id="alertBox" style="display: none"></div>

      <div class="card">
        <div class="card-header">Add New Capital</div>
        <div class="card-body">
          <form id="addCapitalForm">
            <div class="mb-3">
              <label for="country" class="form-label">Country</label>
              <input type="text" class="form-control" id="country" required />
            </div>
            <div class="mb-3">
              <label for="capital" class="form-label">Capital</label>
              <input type="text" class="form-control" id="capital" required />
            </div>
            <button type="submit" class="btn btn-primary">Add Capital</button>
          </form>
        </div>
      </div>

      <div class="card">
        <div class="card-header">All Capitals</div>
        <div class="card-body capital-list">
          <ul class="list-group" id="capitalsList">
            <% if (capitals && capitals.length > 0) { %> <%
            capitals.forEach(function(item) { %>
            <li
              class="list-group-item d-flex justify-content-between align-items-center"
            >
              <span>
                <strong><%= item.country %></strong>: <%= item.capital %>
              </span>
              <span>
                <button
                  class="btn btn-sm btn-warning me-1"
                  onclick="editCapital(<%= item.id %>, '<%= item.country %>', '<%= item.capital %>')"
                >
                  Edit
                </button>
                <button
                  class="btn btn-sm btn-danger"
                  onclick="deleteCapital(<%= item.id %>, '<%= item.country %>')"
                >
                  Delete
                </button>
              </span>
            </li>
            <% }) %> <% } else { %>
            <li class="list-group-item text-center text-muted">
              No capitals found.
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>

    <!-- Edit Modal -->
    <div
      class="modal fade"
      id="editModal"
      tabindex="-1"
      aria-labelledby="editModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <form class="modal-content" id="editCapitalForm">
          <div class="modal-header">
            <h5 class="modal-title" id="editModalLabel">Edit Capital</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <input type="hidden" id="editId" />
            <div class="mb-3">
              <label for="editCountry" class="form-label">Country</label>
              <input
                type="text"
                class="form-control"
                id="editCountry"
                required
              />
            </div>
            <div class="mb-3">
              <label for="editCapital" class="form-label">Capital</label>
              <input
                type="text"
                class="form-control"
                id="editCapital"
                required
              />
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/script.js"></script>
  </body>
</html>
